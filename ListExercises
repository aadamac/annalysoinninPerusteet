#Exercise1
funiturelist = ["table", "chair", "sofa" , "bed"]
print(funiturelist)
print(funiturelist[0], funiturelist[1])
if "sofa" in funiturelist:
    print("sofa")

#Exercise2
thrownDiceNumbers = []
import random
for _ in range(5):
    thrownDiceNumbers.append(random.randint(1, 6))
print(thrownDiceNumbers)
total = sum(thrownDiceNumbers)
print("The sum is " ,total)

#Exercise3

import random

numberList = []

while len(numberList) < 5:
    new_number = random.randint(1, 20) 
    if new_number not in numberList:    
        numberList.append(new_number)   

print("Random unique numbers:", numberList)

